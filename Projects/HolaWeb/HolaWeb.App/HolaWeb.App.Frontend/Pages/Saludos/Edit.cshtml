}

<h1>Edición del saludo: @Model.Saludo.Spanish</h1>

<form action="" method="post">
    <div class="form-group">
        <label asp-for="Saludo.Spanish"></label>
        <input asp-for="Saludo.Spanish" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Saludo.English"></label>
        <input asp-for="Saludo.English" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Saludo.Italian"></label>
        <input asp-for="Saludo.Italian" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Saludo.German"></label>
        <input asp-for="Saludo.German" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Saludo.Japanese"></label>
        <input asp-for="Saludo.Japanese" class="form-control">
    </div>

    <button type="submit" class="btn-default">Grabar</button>
</form>

