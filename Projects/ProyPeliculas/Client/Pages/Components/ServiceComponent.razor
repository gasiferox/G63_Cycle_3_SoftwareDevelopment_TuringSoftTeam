<div class="jumbotron">
    <div class="container">
        <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var movie in Movies)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-300">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="card">
                                <img src="@movie.Image" class="rounded mx-auto d-block" alt="img-thumbnail card-img-top" height="300px" width="200px">
                                <div class="card-body">
                                    <h6 class="card-title">@movie.Name</h6>
                                    <p class="text-muted">
                                        @movie.Sinopsis
                                        <br>
                                        @movie.Category
                                        <br>
                                        <small>@movie.Casting</small>
                                        <br>
                                        <small>@movie.Premier</small>
                                    </p>
                                </div>
                                <div>
                                    <button @onClick="MovieDelete">Eliminar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <p>More info</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="Jumbo action link" role="button">Jumbo action name</a>
        </p>
    </div>
    </div>
</div>

@code{
    [Parameter] public List<Movie> Movies { get; set; }

