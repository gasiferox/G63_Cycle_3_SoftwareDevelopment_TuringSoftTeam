<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <!-- Indicators -->
    <div class="carousel-indicators">
        <li type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true"></li>
        <li type="button" data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
        <li type="button" data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
    </div>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/img/movies/banner_inception.jpg" class="d-block w-100" height="350px">
        </div>
        <div class="carousel-item">
            <img src="/imag/movies/banner_worldWarZ.jpg" class="d-block w-100" height="350px">
        </div>
